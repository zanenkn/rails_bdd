<% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
<% end -%>

<h1>Articles</h1>
<% @articles.each do |article| %>
  <div id= <%= article.id %> >
  <h2><%= article.title %></h3>
  <p><%= article.content %></p>
  <%= link_to 'Delete', article_path(article),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
