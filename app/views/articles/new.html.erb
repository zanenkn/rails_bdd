
<%= form_with scope: :article, url: articles_path, local: true do |form| %>
    
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>
    <p>
      <%= form.label :content %><br>
      <%= form.text_area :content %>
    </p>
   
    <button id="create">
      <%= form.submit "Create" %>
    </button>

<% end %>